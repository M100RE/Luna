variables : global
{
    a = 5px : constraint;
    highlight = #ffffff : color;
}

pallete : local
{
    header = #0f0f0f : color;
    normal = #ffffff : color;
}

button
{
    highlight: #ff00000; 
    x: a;
    width: 10r%;
    y: 50.5% - 12px;
    height: 50r%;

    xdef: right;
    ydef: down;

    color: highlight;
}

exit : button : pallete
{
    highlight: #0000ff;
    x: 10px;
    font-color: normal;
}